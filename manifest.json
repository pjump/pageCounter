{
  "name": "Page Counter",
  "description": "Toggle a page counter for the current tab",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*", "file:///*/*" ],
      "js": ["contentScript.js"],
      "css": ["css.css"]
    }
  ],
  "browser_action": {
    "default_title": "Toggle a page counter for the current tab"
  },
  "manifest_version": 2
}
